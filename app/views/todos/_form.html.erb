<h4>Create New Todo</h4>

<%#= form_for(todo) do |f| %>
<%= form_for([user, todo]) do |f| %>

  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: 4, autofocus: true, placeholder: 'Enter description' %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-default' %>
    </div>
  </div>

<% end %>

