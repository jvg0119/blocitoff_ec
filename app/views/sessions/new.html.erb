
<h1>Sign In</h1>

<%= form_tag session_path do %> <!-- this is where it's going to sessions#create forms are normally post-->

	<div class="row col-md-6">

		<div class="form-group">
			<%= label_tag :email %>
			<%= email_field_tag :email, nil, class: 'form-control', placeholder: "Enter email", autofocus: true %>
		</div>

		<div class="form-group">
			<%= label_tag :password %>
			<%= password_field_tag :password, nil, class: 'form-control', placeholder: "Enter password" %>
		</div>

		<div class="form-group">
			<%= submit_tag "Sign In", class: 'btn btn-success' %>
		</div>

	</div>

<% end %>

