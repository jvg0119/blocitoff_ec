<h1>User Profile</h1>

<div class="well">
	<h3><%= @user.name %></h3>
	<p><%= mail_to @user.email %></p>
</div>

<% if current_user?(@user) %>
	<%= link_to "Edit", edit_user_path(@user), class: 'btn btn-info' %>
	<%= link_to "Delete", user_path(@user), method: :delete, class: 'btn btn-danger' %>
<% end %>

<div class="container">
  <h2><%= @user.name %>'s Todos</h2>
  <p>This todo list will expire after 7 days:</p>            
  <table class="table table-hover js-todos">
    <thead>
      <tr>
        <th>Descriptions</th>
        <th>Days left</th>
        <th>Complete</th>
      </tr>
    </thead>
  
      <%= render partial: 'todos/todo', collection: @todos, locals: { user: @user, todo: @todo} %>   
      <!-- fr user show controller --> 
  
  </table>
</div>


<div class="new-todo">
	<%#= render partial: 'todos/form', locals: { user: @user, todo: @todos.new } %>
  <%= render partial: 'todos/form', locals: { user: @user, todo: @todo } %>
</div>


